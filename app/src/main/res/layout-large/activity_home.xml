<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgscreenn"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.fedco.mbc.activity.Home">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:background="@drawable/versiontag"
        android:gravity="end|center">

        <TextView
            android:id="@+id/tvBillMon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="end|center"
            android:padding="3dp"
            android:text=""
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLic"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tvBillMon"
            android:gravity="end|center"
            android:padding="3dp"
            android:text=""
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvVer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvLic"
            android:gravity="end|center"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonMetering"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/meter_selector" />

        <TextView
            android:id="@+id/TextViewMtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ImageButtonMetering"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/meter_read"
            android:textSize="22dp"
            android:textColor="@color/color_primary"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonBilling"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/billing_selector" />
        />

        <TextView
            android:id="@+id/TextViewBtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ImageButtonBilling"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="22dp"
            android:text="@string/billing"
            android:textColor="@color/color_primary"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonCollection"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/collection_selector" />
        />

        <TextView
            android:id="@+id/TextViewCtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ImageButtonCollection"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/collection"
            android:textColor="@color/color_primary"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonSurvey"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/survey_selector"
            android:visibility="invisible"/>
        />

        <TextView
            android:id="@+id/TextViewStext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ImageButtonSurvey"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="22dp"
            android:text="@string/survey"
            android:textColor="@color/color_primary"
            android:textStyle="normal"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonReplacement"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:visibility="invisible"
            android:background="@drawable/replace_selector" />
        />

        <TextView
            android:id="@+id/TextViewReplacment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ImageButtonReplacement"
            android:paddingBottom="10dp"
            android:textSize="22dp"
            android:paddingTop="10dp"
            android:text="@string/replacement"
            android:textColor="@color/color_primary"
            android:textStyle="normal"
            android:visibility="invisible"/>

    </RelativeLayout>
</LinearLayout>
