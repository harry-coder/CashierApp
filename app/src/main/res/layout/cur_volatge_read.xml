<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"

    tools:context="com.fedco.mbc.activity.Readinginput">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@+id/Header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--METER DISPLAY-->
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/login_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_primary"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TextView
                    android:id="@+id/Headertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/voltage"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/TextViewVR1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/mtr"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TextViewVR2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/tng"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/MDVRVrph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/r_phase"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <EditText
                        android:id="@+id/VMRValues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/VTRValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                </TableRow>


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/color_primary"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/MDVRVyph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/y_phase"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <EditText
                        android:id="@+id/VMYValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/VTYValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"

                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/MDVRVbph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/b_phase"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <EditText
                        android:id="@+id/VMBValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/VTBValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </TableRow>

            </TableLayout>

            <!--TONGUE TESTER DISPLAY-->
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/login_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_primary"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TextView
                    android:id="@+id/Headertext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/current"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:gravity="center_horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/TextViewCVR1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/mtr"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TextViewCVR3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/tng"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TTDVrph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/r_phase"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <EditText
                        android:id="@+id/CMRValues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/CTRValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                </TableRow>


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/color_primary"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TTDVyph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/y_phase"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <EditText
                        android:id="@+id/CMYValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/CTYValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"

                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TTDVbph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/b_phase"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <EditText
                        android:id="@+id/CMBValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/CTBValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_primary">


        <TextView
            android:id="@+id/TextViewHEADER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="@string/cur_vol"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"

            android:textSize="12dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relback"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_continue">

            <Button
                android:id="@+id/Buttonback"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:layout_gravity="center|right"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/back"
                android:padding="7dp"
                android:textColor="@drawable/button_login_textcolor"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_continue">

            <Button
                android:id="@+id/ButtonContreading"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:layout_gravity="center|right"
                android:layout_marginRight="13dp"
                android:background="@drawable/forward"

                android:padding="7dp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
